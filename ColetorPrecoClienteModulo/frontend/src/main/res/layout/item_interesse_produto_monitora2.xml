<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imgProduto"
        android:layout_height="match_parent"
        tools:src="@drawable/aparelho"
        android:padding="4dp"
        android:layout_width="72dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoja"
            tools:text="Dafiti"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNomeProduto"
            tools:text="Sapato lodfjdisfnuidscn nnsamd nksdnfss nsfdkndsjk lkhdskghds klhlkhgkjdfh jkhsdfgkjhds hsdjkfhsj d mkss nsijdsncdiwhe"
            android:padding="4dp"
            android:layout_below="@+id/rtbRecomendacao"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPreco"
            tools:text="R$ 120,00"
            android:textColor="@color/textoPreco"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RatingBar
            android:id="@+id/rtbRecomendacao"
            android:numStars="3"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2"
            android:stepSize="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:visibility="invisible" />

        <TextView
            android:text="Novo"
            android:textColor="@color/textoNovo"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNovo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imgMudanca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtNomeProduto"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgPrecoBaixo"
            android:layout_toStartOf="@+id/imgPrecoBaixo"
            app:srcCompat="@drawable/mudanca_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/seta_reducao"
            android:layout_alignParentTop="true"
            android:id="@+id/imgPrecoBaixo"
            android:layout_above="@+id/txtNomeProduto"
            android:layout_alignLeft="@+id/imgPrecoAlto"
            android:layout_alignStart="@+id/imgPrecoAlto" />

        <ImageView
            android:id="@+id/imgPrecoAlto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtNomeProduto"
            android:layout_alignLeft="@+id/txtPreco"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtPreco"
            app:srcCompat="@drawable/seta_aumento" />



    </RelativeLayout>


</LinearLayout>

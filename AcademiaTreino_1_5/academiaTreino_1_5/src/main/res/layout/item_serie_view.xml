				<Button
				    android:id="@+id/btnInicializa2"
				    style="?android:attr/buttonStyleSmall"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_column="2"
				    android:text="Inicializa" />

				<TextView
				    android:id="@+id/txtRepeticoes2Anterior1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="txtRepeticoes2Anterior1" />
				<TextView
				    android:id="@+id/txtRepeticoes2Anterior2"

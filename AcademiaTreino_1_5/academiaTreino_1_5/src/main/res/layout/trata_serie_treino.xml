<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lstItemSerie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lytComandos"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chkAtivo" >

    </ListView>



    <CheckBox
        android:id="@+id/chkAtivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ativo" />

    <LinearLayout
        android:id="@+id/lytComandos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="2dp" >

         <ImageButton
            android:id="@+id/btnExcluiSerie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/palette4"
            android:src="@drawable/ic_note_add_black_24dp" />
        
        
        <ImageButton
            android:id="@+id/btnNovoExercicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/palette4"
            android:src="@drawable/ic_note_add_black_24dp" />

        <ImageButton
            android:id="@+id/btnOkTrataSerieTreino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/palette4"
            android:src="@drawable/ic_check_circle_black_24dp" />

    </LinearLayout>

</RelativeLayout>
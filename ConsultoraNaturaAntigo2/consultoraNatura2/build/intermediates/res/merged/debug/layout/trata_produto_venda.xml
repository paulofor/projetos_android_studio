<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnOkTrataProdutoVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Ok" />

    <SearchView
        android:id="@+id/pesquisaProdutoParaVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lstPesquisaProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPrecoProdutoVenda"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pesquisaProdutoParaVenda"
        android:background="@color/palette2" />

    <EditText
        android:id="@+id/txtQtdeProdutoVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnOkTrataProdutoVenda"
        android:layout_alignParentLeft="true"
        android:ems="10" />

    <TextView
        android:id="@+id/txtPrecoProdutoVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtQtdeProdutoVendas"
        android:layout_alignParentLeft="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<br.com.digicom.layout.ItemLista xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/palette3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtNomeProduto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgProduto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1" 
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/txtLojaVirtual"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPercentualAjuste"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPrecoAnterior"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtPrecoAtual"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</br.com.digicom.layout.ItemLista>